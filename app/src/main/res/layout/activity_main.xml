<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtNoInternet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/nointernet"
        android:visibility="gone"/>
    <RelativeLayout
        android:id="@+id/rlParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="2dp" android:background="#ECECEC">

        <TextView
            android:id="@+id/txtCityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/txtToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtCityName"
            android:paddingLeft="10dp"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imgWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txtToday"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:minWidth="64dp"
            android:minHeight="64dp" />

        <TextView
            android:id="@+id/txtWeatherInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgWeather"
            android:paddingLeft="15dp"
            android:paddingTop="2dp"
            android:minWidth="90dp"
            android:maxWidth="90dp"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtCurrentTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtToday"
            android:layout_toRightOf="@+id/txtWeatherInfo"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/txtMaxTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtCurrentTemperature"
            android:layout_toRightOf="@+id/txtWeatherInfo"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtMinTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtMaxTemperature"
            android:layout_toRightOf="@+id/txtWeatherInfo"
            android:paddingLeft="20dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtWind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtMinTemperature"
            android:layout_toRightOf="@+id/txtWeatherInfo"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:textSize="14sp" />
        <LinearLayout
            android:id="@+id/lldetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtWind"
            android:layout_toRightOf="@+id/txtWeatherInfo"
            android:paddingLeft="2dp"
            android:paddingTop="5dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:padding="2dp"
                android:src="@drawable/sunrise" />

            <TextView
                android:id="@+id/txtSunrise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />
        <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:padding="2dp"
                android:src="@drawable/sunset" />

            <TextView
                android:id="@+id/txtSunset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

    </RelativeLayout>
    <View
        android:id="@+id/vLine"
        android:layout_width="match_parent"
        android:layout_below="@id/rlMain"
        android:layout_height="1dp" android:background="@android:color/white" />
    <LinearLayout
        android:id="@+id/llInfoBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/vLine"
        android:gravity="right"
        android:orientation="horizontal" android:background="#ECECEC">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="@string/forecastInfo" />
        <ImageButton
            android:id="@+id/btnGetInfo"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="2dp"
            android:background="@drawable/more_info" />
    </LinearLayout>
        <Button
            android:id="@+id/btnAddCity"
            android:layout_width="match_parent"
            android:layout_below="@+id/llInfoBtn"
            android:layout_height="wrap_content" android:text="@string/action_addcities"/>

    <ListView
        android:id="@+id/lstCities"
        android:layout_below="@id/btnAddCity"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:paddingBottom="8dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarSize="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>
